<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phitecnicos2"
    android:scaleType="centerCrop">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="195dp"
        android:text="Visitas"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#5E5A5A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fecha"
        android:layout_width="149dp"
        android:layout_height="41dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/contorno"
        android:backgroundTint="#BDBDBD"
        android:backgroundTintMode="add"
        android:breakStrategy="simple"
        android:drawableTint="#000000"
        android:ems="10"
        android:foregroundTint="#674C4C"
        android:hint="Fecha"
        android:inputType="date"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/trabajadoresexternos"
        android:layout_width="354dp"
        android:layout_height="65dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/contorno"
        android:backgroundTint="#BDBDBD"
        android:backgroundTintMode="add"
        android:breakStrategy="simple"
        android:drawableTint="#000000"
        android:ems="10"
        android:foregroundTint="#674C4C"
        android:hint="Trabajadores Externos"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nombreempresa"
        android:layout_width="220dp"
        android:layout_height="41dp"
        android:layout_marginTop="204dp"
        android:background="@drawable/contorno"
        android:backgroundTint="#BDBDBD"
        android:backgroundTintMode="add"
        android:breakStrategy="simple"
        android:drawableTint="#000000"
        android:ems="10"
        android:foregroundTint="#674C4C"
        android:hint="Nombre de la Empresa"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/observaciones"
        android:layout_width="347dp"
        android:layout_height="84dp"
        android:layout_marginTop="448dp"
        android:background="@drawable/contorno"
        android:backgroundTint="#BDBDBD"
        android:backgroundTintMode="add"
        android:breakStrategy="simple"
        android:drawableTint="#000000"
        android:ems="10"
        android:foregroundTint="#674C4C"
        android:hint="Observaciones"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/stvisita"
        android:layout_width="230dp"
        android:layout_height="36dp"
        android:layout_marginTop="252dp"
        android:background="@drawable/spinner"
        android:backgroundTint="#BDBDBD"
        android:backgroundTintMode="add"
        android:breakStrategy="simple"
        android:ems="10"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.248"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/strabajadores"
        android:layout_width="220dp"
        android:layout_height="36dp"
        android:layout_marginTop="304dp"
        android:background="@drawable/spinner"
        android:backgroundTint="#BDBDBD"
        android:backgroundTintMode="add"
        android:breakStrategy="simple"
        android:ems="10"
        android:foregroundTint="#000000"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idv"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/contorno"
        android:backgroundTint="#BDBDBD"
        android:backgroundTintMode="add"
        android:breakStrategy="simple"
        android:drawableTint="#000000"
        android:ems="10"
        android:foregroundTint="#674C4C"
        android:hint="Id"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/insertar"
        android:layout_width="164dp"
        android:layout_height="73dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/boton_redondo"
        android:text="INSERTAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>